{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-console": [2, { "allow": ["warn", "error"] }],
        "no-empty": 1,
        "no-irregular-whitespace": 1,
        "max-len": [2, { "code": 140, "ignorePattern": "^import .*" }],
        "semi": [2, "always"],
        "quotes": [2, "single"]
    }
}
